<p>
  <h2><%= @house.name %></h2>
</p>

<p>
  <img class='house-photo' src="<%= @house.photo_url %>">
</p>

<h2>Characters</h2>

<% @house.characters.each do |character| %>
  <p><%= character.name %></p>
  <p><%= character.img_url %></p>
<% end %>

<h3>Add Character:</h3>
<%= form_for([@house, @house.characters.build]) do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.text_field :img_url %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_house_path(@house) %> |
<%= link_to 'Back', houses_path %>
